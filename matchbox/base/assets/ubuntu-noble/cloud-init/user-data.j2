#cloud-config
# See the autoinstall documentation at:
# https://canonical-subiquity.readthedocs-hosted.com/en/latest/reference/autoinstall-reference.html
autoinstall:
  apt:
    disable_components: []
    fallback: offline-install
    geoip: true
    mirror-selection:
      primary:
      - country-mirror
      - arches: &id001
        - amd64
        - i386
        uri: http://archive.ubuntu.com/ubuntu/
      - arches: &id002
        - s390x
        - arm64
        - armhf
        - powerpc
        - ppc64el
        - riscv64
        uri: http://ports.ubuntu.com/ubuntu-ports
    preserve_sources_list: false
    security:
    - arches: *id001
      uri: http://security.ubuntu.com/ubuntu/
    - arches: *id002
      uri: http://ports.ubuntu.com/ubuntu-ports
  codecs:
    install: false
  drivers:
    install: false
  identity:
    hostname: {{ inventory_hostname }}
    password: $6$adP3t9vbh8F9aoc9$CjdTMkRjiSErtt44jG4pQ1PENd6oaZ2/nGhv7j4j9K77onUbhEFMieZkJvGi8D/4bTcCJvdmn2muLlvdxoPnG0
    realname: Glenn Marcy
    username: gmarcy
  kernel:
    package: linux-generic
  keyboard:
    layout: us
    toggle: null
    variant: ''
  late-commands:
  - curtin in-target --target=/target -- mkdir -p /home/libvirt/lib
  - curtin in-target --target=/target -- ln -s /home/libvirt/lib /var/lib/libvirt
  - sed -i 's/    HashKnownHosts yes/#   HashKnownHosts yes/' /target/etc/ssh/ssh_config
  - sed -i 's/    GSSAPIAuthentication yes/#   GSSAPIAuthentication yes/' /target/etc/ssh/ssh_config
  - chmod u+w /target/etc/sudoers
  - sed -i '/^%sudo/s;\(.ALL\)$;NOPASSWD:\1;' /target/etc/sudoers
  - chmod u-w /target/etc/sudoers
  locale: en_US.UTF-8
  network:
    ethernets:
      {{ netdev }}:
        critical: true
        dhcp-identifier: mac
        dhcp4: true
        nameservers:
          addresses:
          - 8.8.8.8
          search:
          - lab.gmarcy.com.
    version: 2
    wifis: {}
  oem:
    install: auto
  source:
    id: ubuntu-server-minimal
    search_drivers: false
  ssh:
    allow-pw: true
    authorized-keys:
    - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIAsdgW20NtVSpXRSmC5cjEKTN+p9Ju01EdPYHdtwqmyp homelab@gmarcy.com
    install-server: true
  storage:
    config:
    - ptable: gpt
      path: /dev/{{ bootdev }}
      wipe: superblock-recursive
      preserve: false
      name: ''
      grub_device: false
      id: disk-{{ bootdev }}
      type: disk
    - device: disk-{{ bootdev }}
      size: 1127219200
      wipe: superblock
      flag: boot
      number: 1
      preserve: false
      grub_device: true
      offset: 1048576
      id: partition-0
      type: partition
    - fstype: fat32
      volume: partition-0
      preserve: false
      id: format-0
      type: format
    - device: disk-{{ bootdev }}
      size: 2147483648
      wipe: superblock
      number: 2
      preserve: false
      grub_device: false
      offset: 1128267776
      id: partition-1
      type: partition
    - fstype: ext4
      volume: partition-1
      preserve: false
      id: format-1
      type: format
    - device: disk-{{ bootdev }}
      size: 1997122043904
      wipe: superblock
      number: 3
      preserve: false
      grub_device: false
      offset: 3275751424
      id: partition-2
      type: partition
    - name: ubuntu-vg
      devices:
      - partition-2
      preserve: false
      id: lvm_volgroup-0
      type: lvm_volgroup
    - name: lv-root
      volgroup: lvm_volgroup-0
      size: 107374182400B
      wipe: superblock
      preserve: false
      id: lvm_partition-0
      type: lvm_partition
    - fstype: ext4
      volume: lvm_partition-0
      preserve: false
      id: format-2
      type: format
    - path: /
      device: format-2
      id: mount-2
      type: mount
    - path: /boot
      device: format-1
      id: mount-1
      type: mount
    - path: /boot/efi
      device: format-0
      id: mount-0
      type: mount
    - name: lv-home
      volgroup: lvm_volgroup-0
      size: -1
      wipe: superblock
      preserve: false
      id: lvm_partition-1
      type: lvm_partition
    - fstype: ext4
      volume: lvm_partition-1
      preserve: false
      id: format-3
      type: format
    - path: /home
      device: format-3
      id: mount-3
      type: mount
  timezone: America/New_York
  updates: security
  version: 1
